                </FlexBox>
                <FlexBox id="_IDGenFlexBox5" class="boxLogin" >
                <Label id="_IDGenLabel1" text="Senha" class="labelLogin"/>
                <Input
                    id="registerPassword"
                    class="inputLogin"
                    type="Password"
                    placeholder="Senha"
                    enabled="true"
                    editable="true"

                />
                </FlexBox>
                <FlexBox id="IDFlexBox2" justifyContent="Center" class="boxButton">
                    <Button id="registerButton" width="100%" text="CADASTRAR" press="onCadastrar" class="buttonCss buttonEntrar"/>
                </FlexBox>

                <FlexBox id="IDFlexBox3" justifyContent="Center" class="linkBoxRegister">
                    <Text id="_IDGenText1" text="Já tem uma conta?" class="textFooterRegister"/>
                    <Link id="linkGoToLogin" text="Clique aqui para fazer login." press="onGoToLogin" class="textFooterRegister linkColor"/>
                </FlexBox>

                <FlexBox id="_IDGenFlexBox10"  justifyContent="Center" class="boxImageAngloFooter">
                   <Image id="_IDGenImage1" 
                 class="imageAnglo" src="images/Anglo_American_Logo_RGB_4C 1.png" />
                </FlexBox>

            </l:content>
            
 
