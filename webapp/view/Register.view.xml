<mvc:View controllerName="logincep.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="RegisterPage" title="Registro">
        <content>
            <FlexBox id="_IDGenFlexBox1" alignItems="Center" justifyContent="Center">
                <VBox id="_IDGenVbox1" alignItems="Center" justifyContent="Center" width="100%">
                    <Button id="_IDGenButton3" icon="sap-icon://customer"/>
                    <Text id="_IDGenText1" text="Registrar uma nova conta" class="HeaderLabel sapUiSmallMargin"/>
                    <HBox id="_IDGenHboxFirstName">
                        <Label id="_IDLabelFirstName" text="Nome" width="100px"/>
                        <Input id="registerFirstName" placeholder="Digite seu nome" width="200px" showClearIcon="true"/>
                    </HBox>
                    <HBox id="_IDGenHboxLastName">
                        <Label id="_IDLabelLastName" text="Sobrenome" width="100px"/>
                        <Input id="registerLastName" placeholder="Digite seu sobrenome" width="200px" showClearIcon="true"/>
                    </HBox>
                    <HBox id="_IDGenHbox1">
                        <Label id="_IDLabel1" text="E-mail" width="100px"/>
                        <Input id="registerEmail" placeholder="Digite seu e-mail" width="200px" showClearIcon="true"/>
                    </HBox>
                    <HBox id="_IDHbox2">
                        <Label id="_IDLabel2" text="Senha" width="100px"/>
                        <Input id="registerPassword" placeholder="Digite sua senha" width="200px" type="Password" showValueHelp="true" showClearIcon="false"/>
                    </HBox>
                    <FlexBox id="IDFlexBox2" justifyContent="Center">
                        <Button id="registerButton" text="Cadastrar" type="Reject" press="onCadastrar" class="sapUiSmallMargin"/>
                    </FlexBox>
                    <Link id="linkGoToLogin" text="JÃ¡ tem uma conta? Clique aqui para fazer login." press="onGoToLogin"/>
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>