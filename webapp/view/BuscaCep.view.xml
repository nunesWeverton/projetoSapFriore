<mvc:View controllerName="logincep.controller.BuscaCep"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
 
    <SplitApp id="SplitApp">
        <masterPages>
            <Page id="menuPage" title="Menu">
                <content>
                    <FlexBox id="flex1" class= "flex1" >
                    <List id="menuList">
                        <!-- Adicionando classes CSS para estilização -->
                    
                        <StandardListItem id="menuItemBuscaCep" title="Busca CEP" type="Active" press="onMenuSelect"  class="menuItem" selected="true"  />
                        <StandardListItem id="menuItemHistorico" title="Histórico" type="Active" press="onMenuSelect" class="menuItem"/>
                    </List>
                    </FlexBox>
                </content>
            </Page>
        </masterPages>
 
        <!-- detailPages -->
        <detailPages>
            <Page id="pageBuscaCep" title="Busca CEP">
                <customHeader>
                    <Bar id="detailPageHeader">
                        <contentMiddle>
                            <Title id="pageTitle" text="Busca CEP" />
                        </contentMiddle>
                        <contentRight>
                            <HBox id="headerBox">
                                <Button id="userButton" type="Transparent" icon="sap-icon://person-placeholder" press="onUserPress" />
                                <Button id="logoutButton" text="Logout" icon="sap-icon://log" press="onLogout" type="Emphasized"/>
                                <Text id="userName" text="" />
                            </HBox>
                        </contentRight>
                    </Bar>
                </customHeader>
                <content>
                
                    <VBox id="vboxBuscaCep" visible="true" class="VboxSearch">
                        <FlexBox id="search" class="FlexBoxSearch">
                                <Text id="textCep" text="Digite o CEP para buscar informações:" class="textForHead" />
                            <HBox id="1" class="box">
                                <Input id="inputCep" placeholder="Digite o CEP..." />
                                <Button id="btnBuscar" text="Buscar" press="onBuscarCep" />
                            </HBox>
                        </FlexBox>
                        <VBox id="textResult" /> 
                    </VBox>
                    <VBox id="vboxHistorico" visible="false" class="headerToolbar">
                       <Table id="historicoTable" mode="SingleSelectMaster" class="myCustomTable">
    <headerToolbar>
        <Toolbar id="historicoToolbar" class="myCustomToolbar">
            <Title id="historicoTitle" text="Histórico de Buscas" class="myCustomTitle" />
            <ToolbarSpacer id="ToolbarSpacer" />
            <Input id="inputEndereco" placeholder="Buscar endereço no histórico..." width="20rem" class="myCustomInput" />
            <Button id="btnBuscarEndereco" text="Buscar" press="onBuscarEndereco" class="myCustomButton" />
            <Button id="btnOrdenarCrescente" text="Ordenar Crescente" press="onOrdenarCrescente" class="myCustomButton" />
            <Button id="btnOrdenarDecrescente" text="Ordenar Decrescente" press="onOrdenarDecrescente" class="myCustomButton" />
            <Button id="btnLimpa" text="Limpa Ordenacao" press="onLimpaOrdenacao" class="myCustomButton" />
            <Button id="btnGerarRelatorio" text="Gerar Relatório" press="onGerarRelatorio" class="myCustomButton" />
        </Toolbar>
    </headerToolbar>
    <columns>
        <Column id="colData" class="myCustomColumn">
            <Text id="teest4e" text="Data" class="myCustomColumnHeader" />
        </Column>
        <Column id="colCep" class="myCustomColumn">
            <Text id="teeste5" text="CEP Pesquisado" class="myCustomColumnHeader" />
        </Column>
        <Column id="colResultado" class="myCustomColumn">
            <Text id="teeste7" text="Resultado" class="myCustomColumnHeader" />
        </Column>
    </columns>
    <items>
        <ColumnListItem id="teste" type="Active" class="myCustomListItem">
    <cells>
        <Text id="teeste1" text="{historico>data}" class="myCustomText myCustomTextData" />
        <Text id="teeste2" text="{historico>cep}" class="myCustomText myCustomTextCep" />
        <Text id="teeste3" text="{historico>resultado}" class="myCustomText myCustomTextResultado" />
    </cells>
</ColumnListItem>
    </items>
</Table>



                    </VBox>
                </content>
            </Page>
        </detailPages>
 
    </SplitApp>
 
</mvc:View>
